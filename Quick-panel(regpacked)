  "Absolutely mesmerizing! (âˆ©ËƒoË‚âˆ©)â¤ï¸ ðŸº",  
  "So radiant and beautiful Îµ(Â´ï½¡â€¢áŽ‘â€¢`)ã£ ðŸ’• ðŸº",  
  " very charming ðŸ˜ðŸ’› ðŸº",  
  "(âˆ©ËƒoË‚âˆ©)â¤ï¸âœ¨super cuteeeee ðŸº",  
  "ê’°à¦ŒðŸ˜‡ðŸ‘Œà»’ê’± perfect ðŸº",  
  "very cute ðŸ¥° ðŸ¥° ðŸº",  
  "absolutely adorable ðŸº"
];

  // Create main panel container
  const panel = document.createElement('div');
  panel.style.position = 'fixed';
  panel.style.bottom = '20px';
  panel.style.left = '50%';
  panel.style.transform = 'translateX(-50%)';
  panel.style.width = '95vw';
  panel.style.maxWidth = '600px';
  panel.style.background = 'linear-gradient(145deg, #1e1e2f, #2a2a3a)';
  panel.style.borderRadius = '16px';
  panel.style.padding = '16px';
  panel.style.display = 'flex';
  panel.style.flexDirection = 'column';
  panel.style.zIndex = 999999;
  panel.style.boxShadow = '0 10px 30px rgba(0,0,0,0.4)';
  panel.style.color = '#f5f5f5';
  panel.style.fontFamily = '"Segoe UI", sans-serif';
  panel.style.userSelect = 'none';
  panel.style.touchAction = 'none';

  // Create top bar (title + close button)
  const topBar = document.createElement('div');
  topBar.style.display = 'flex';
  topBar.style.alignItems = 'center';
  topBar.style.marginBottom = '12px';
  topBar.style.cursor = 'grab';
  topBar.style.padding = '4px 8px';
  topBar.style.borderRadius = '10px';
  topBar.style.background = 'rgba(255,255,255,0.05)';
  topBar.style.backdropFilter = 'blur(8px)';

  const title = document.createElement('div');
  title.textContent = 'Quick Comment Panel:';
  title.style.fontWeight = '600';
  title.style.fontSize = '16px';
  title.style.flex = '1 1 auto';
  topBar.appendChild(title);

  const closeBtn = document.createElement('button');
  closeBtn.textContent = 'Ã—';
  closeBtn.title = 'Close panel';
  closeBtn.style.background = 'rgba(255,255,255,0.1)';
  closeBtn.style.border = 'none';
  closeBtn.style.color = '#f5f5f5';
  closeBtn.style.fontSize = '20px';
  closeBtn.style.cursor = 'pointer';
  closeBtn.style.userSelect = 'none';
  closeBtn.style.padding = '0';
  closeBtn.style.flex = '0 0 auto';
  closeBtn.style.lineHeight = '1';
  closeBtn.style.marginLeft = 'auto';
  closeBtn.style.width = '32px';
  closeBtn.style.height = '32px';
  closeBtn.style.borderRadius = '50%';
  closeBtn.style.display = 'flex';
  closeBtn.style.alignItems = 'center';
  closeBtn.style.justifyContent = 'center';
  closeBtn.style.transition = 'all 0.2s ease';
  closeBtn.style.marginLeft = '12px';

  closeBtn.addEventListener('mousedown', e => e.stopPropagation());
  closeBtn.addEventListener('touchstart', e => e.stopPropagation());
  closeBtn.addEventListener('click', () => panel.remove());
  closeBtn.addEventListener('mouseenter', () => {
    closeBtn.style.background = 'rgba(255,255,255,0.2)';
    closeBtn.style.transform = 'scale(1.1)';
  });
  closeBtn.addEventListener('mouseleave', () => {
    closeBtn.style.background = 'rgba(255,255,255,0.1)';
    closeBtn.style.transform = 'scale(1)';
  });

  topBar.appendChild(closeBtn);
  panel.appendChild(topBar);

  // Create scrollable buttons container
  const btnContainer = document.createElement('div');
  btnContainer.style.display = 'flex';
  btnContainer.style.overflowX = 'auto';
  btnContainer.style.gap = '12px';
  btnContainer.style.padding = '8px 0';
  btnContainer.style.scrollBehavior = 'smooth';
  btnContainer.style.position = 'relative';
  btnContainer.style.minHeight = '56px'; // âœ… Fixed height for button visibility
  btnContainer.style.alignItems = 'center';
  btnContainer.style.webkitOverflowScrolling = 'touch';

  const delay = ms => new Promise(res => setTimeout(res, ms));

  async function performAction(commentText) {
    const likeButton = document.querySelector('button[title="Like"]');
    if (likeButton) {
      likeButton.dispatchEvent(new MouseEvent('click', { bubbles: true, cancelable: true, view: window }));
      console.log("â¤ï¸ Like clicked");
    } else {
      console.warn("âŒ Like button not found");
    }
    await delay(200);

    const textarea = document.querySelector('textarea[placeholder="What do you like about this creation?"]');
    if (textarea) {
      const nativeSetter = Object.getOwnPropertyDescriptor(window.HTMLTextAreaElement.prototype, 'value').set;
      nativeSetter.call(textarea, commentText);
      textarea.dispatchEvent(new Event('input', { bubbles: true }));
      console.log("ðŸ“ Textarea filled:", commentText);
    } else {
      console.warn("âŒ Textarea not found");
    }
    await delay(200);

    const buttons = [...document.querySelectorAll('button')];
    const submitButton = buttons.find(b => b.textContent.trim() === 'Submit');
    if (submitButton) {
      submitButton.dispatchEvent(new MouseEvent('click', { bubbles: true, cancelable: true, view: window }));
      console.log("ðŸš€ Submit clicked");
    } else {
      console.warn("âŒ Submit button not found");
    }
  }

  const buttonColors = ['#ff6b6b', '#4ecdc4', '#45b7d1', '#96ce8c', '#ffe66d'];
  comments.forEach((text, index) => {
    const btn = document.createElement('button');
    btn.textContent = text;
    btn.style.flex = '0 0 auto';
    btn.style.padding = '12px 20px';
    btn.style.border = 'none';
    btn.style.borderRadius = '25px';
    btn.style.background = buttonColors[index % buttonColors.length];
    btn.style.color = '#1a1a1a';
    btn.style.fontSize = '15px';
    btn.style.fontWeight = '500';
    btn.style.cursor = 'pointer';
    btn.style.userSelect = 'none';
    btn.style.whiteSpace = 'nowrap';
    btn.style.transition = 'all 0.3s ease';
    btn.style.boxShadow = '0 4px 10px rgba(0,0,0,0.2)';
    btn.style.position = 'relative';

    btn.addEventListener('mouseenter', () => {
      btn.style.transform = 'translateY(-2px)';
      btn.style.boxShadow = '0 6px 15px rgba(0,0,0,0.3)';
    });
    btn.addEventListener('mouseleave', () => {
      btn.style.transform = 'translateY(0)';
      btn.style.boxShadow = '0 4px 10px rgba(0,0,0,0.2)';
    });

    btn.addEventListener('click', () => performAction(text));
    btnContainer.appendChild(btn);
  });

  panel.appendChild(btnContainer);

  // Set height dynamically (optional/fallback)
  const firstBtn = btnContainer.querySelector('button');
  if (firstBtn) {
    const btnHeight = firstBtn.offsetHeight;
    panel.style.height = `calc(${btnHeight + topBar.offsetHeight + 32}px + 1em)`;
  }

  // Dragging logic
  let isDragging = false;
  let startX, startY, startLeft, startTop;

  function onDragStart(e) {
    if (e.target.closest('button') === closeBtn) return;
    e.preventDefault();
    isDragging = true;
    startX = e.type.startsWith('touch') ? e.touches[0].clientX : e.clientX;
    startY = e.type.startsWith('touch') ? e.touches[0].clientY : e.clientY;

    const rect = panel.getBoundingClientRect();
    startLeft = rect.left;
    startTop = rect.top;

    panel.style.transition = 'none';
    panel.style.position = 'fixed';
    panel.style.bottom = 'auto';
    panel.style.transform = 'none';
  }

  function onDragMove(e) {
    if (!isDragging) return;
    const currentX = e.type.startsWith('touch') ? e.touches[0].clientX : e.clientX;
    const currentY = e.type.startsWith('touch') ? e.touches[0].clientY : e.clientY;

    let dx = currentX - startX;
    let dy = currentY - startY;

    let newLeft = startLeft + dx;
    let newTop = startTop + dy;

    const maxX = window.innerWidth - panel.offsetWidth;
    const maxY = window.innerHeight - panel.offsetHeight;

    newLeft = Math.min(Math.max(newLeft, 0), maxX);
    newTop = Math.min(Math.max(newTop, 0), maxY);

    panel.style.left = newLeft + 'px';
    panel.style.top = newTop + 'px';
  }

  function onDragEnd() {
    if (isDragging) {
      isDragging = false;
      panel.style.transition = '';
    }
  }

  topBar.addEventListener('mousedown', onDragStart);
  window.addEventListener('mousemove', onDragMove);
  window.addEventListener('mouseup', onDragEnd);
  topBar.addEventListener('touchstart', onDragStart, { passive: false });
  window.addEventListener('touchmove', onDragMove, { passive: false });
  window.addEventListener('touchend', onDragEnd);

  document.body.appendChild(panel);
})();
